<%include ../partials/header%>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="display-4"><%=listing.name%></p>
			<ul class="list-group">
				<a class="list-group-item list-group-item-action"
				href="/listings/<%=listing.id%>">
					Overview</a>
				<a class="list-group-item list-group-item-action"
				href="/listings/<%=listing.id%>/gallery">
					Gallery</a>
				<a class="list-group-item list-group-item-action active"
				href="/listings/<%=listing.id%>/features active">
				Features</a>
			</ul>
		</div>
		<div class="col-md-9">
			<div class="card">
				<img class="card-img-top" src="<%=listing.image.src%>" alt="<%=listing.image.src%>">
				<div class="card-body">
					<div class="card-title d-flex justify-content-between align-items-center">
						<h4><%=listing.name%></h4>
					</div>
					<div class="container">
						<div class="row">
							<ul class="list-group col-md-12">
								<%listing.features.forEach((feature) => {%>
									<li class="list-group-item text-center"><%=feature%></li>
								<%});%>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<%include ../partials/footer%>