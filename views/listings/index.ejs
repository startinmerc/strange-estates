<%include ../partials/header%>

<div class="container">
	<header class="jumbotron py-3">
		<div class="container text-center">
			<h1 class="display-2">Strange Estates</h1>
			<%if(term && !error){%>
			<p class="mt-3">Search results for "<%=term%>"</p>
			<%} else {%>
			<p class="mt-3">View our full listings below.</p>
			<%}%>
			<p>
				<form action="/listings" method="GET" class="form-inline">
					<div class="form-group mx-auto">
						<label class="sr-only" for="search">Search listings</label>
						<input class="form-control mr-sm-2 mb-2 mb-sm-0" type="text" name="search" 
						id="search" placeholder="Search listings">
						<input class="btn btn-secondary" type="submit" name="submit">
					</div>
				</form>
			</p>
		</div>
	</header>

	<div class="row">
		<% foundListings.forEach(function(listing){ %>
			<div class="col-md-3 col-sm-6 index-card-column">
				<div class="card index-card text-center">
					<a href="/listings/<%=listing._id%>">
						<img class="card-img-top" src="<%=listing.image.src%>" alt="<%=listing.image.alt%>">
					</a>
					<div class="card-body pb-0 px-0">
						<h4 class="card-title mb-0"><%= listing.name%></h4>
						<div class="card-text">
							<i class="fa-star fas"></i>
							<i class="fa-star <% if (listing.rating > 1.5) { %> fas <% } else { %> far <% } %>"></i>
							<i class="fa-star <% if (listing.rating > 2.5) { %> fas <% } else { %> far <% } %>"></i>
							<i class="fa-star <% if (listing.rating > 3.5) { %> fas <% } else { %> far <% } %>"></i>
							<i class="fa-star <% if (listing.rating > 4.5) { %> fas <% } else { %> far <% } %>"></i>
						</div>
						<p class="mb-0">
							<a href="/listings/<%=listing._id%>" class="btn btn-secondary d-block ">Details</a> 
						</p>
					</div><!-- card-body -->
				</div><!-- card -->
			</div><!-- col -->
		<% }); %><!-- forEach-->
	</div><!-- row -->
</div><!-- container -->
<%include ../partials/footer%>