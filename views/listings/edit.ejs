<%include ../partials/header%>

<div class="container">
	<div class="row mt-3">
		<h1 class="mx-auto">Edit <%=listing.name%></h1>
	</div>
	<div class="row">
		<div class="w-25 mx-auto mt-2">
			<form action="/listings/<%=listing._id%>/?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="listing[name]" 
					placeholder="name" value="<%=listing.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number"
					name="listing[price]" value="<%=listing.value%>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="listing[image]"
					placeholder="image url" value="<%=listing.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="listing[description]"
					placeholder="description" value="<%=listing.description%>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/listings">Back</a>
		</div>
	</div>
</div>

<%include ../partials/footer%>