<%include ../partials/header%>

<div class="container mt-5">
	<div class="row mt-3">
		<h1 class="mx-auto display-4">Edit <%=listing.name%></h1>
	</div>
	<form class="row lg-w-50 mt-2" action="/listings/<%=listing._id%>/?_method=PUT" method="POST">
		<div class="col-12 col-lg-6">
			<div class="form-group">
				<label for="listing-name">Listing Name</label>
				<input class="form-control" type="text" name="name" 
				id="listing-name" value="<%=listing.name%>">
			</div>
			<div class="form-group">
				<label for="listing-price">Listing Price</label>
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text">Â£</span>
					</div>
					<input class="form-control" type="number"
					name="price" id="listing-price" value="<%=parseInt(listing.price)%>">
				</div>
			</div>
		</div>
		<div class="col-12 col-lg-6">
			<div class="form-group">
				<label for="listing-image-src">Image Link</label>
				<input class="form-control" type="text" name="image[src]"
				id="listing-image-src" value="<%=listing.image.src%>">
			</div>
			<div class="form-group">
				<label for="listing-image-alt">Image Caption</label>
				<input class="form-control" type="text" name="image[alt]"
				id="listing-image-alt" value="<%=listing.image.alt%>">
			</div>
		</div>
		<div class="col-12">
			<div class="form-group">
				<label for="listing-description">Description</label>
				<textarea class="form-control" type="text" name="description" rows="3"
				id="listing-description"><%=listing.description%></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-secondary btn-block">Submit</button>
			</div>
		</div>
	</form>
	<a href="/listings">Back</a>
	</div>
</div>

<%include ../partials/footer%>