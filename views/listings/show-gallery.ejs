<%include ../partials/header%>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="display-4">Strange Estates</p>
			<ul class="list-group">
				<a class="list-group-item list-group-item-action"
				href="/listings/<%=listing.id%>">
					Overview</a>
				<a class="list-group-item list-group-item-action active"
				href="/listings/<%=listing.id%>/gallery">
					Gallery</a>
				<a class="list-group-item list-group-item-action"
				href="/listings/<%=listing.id%>/features">
				Features</a>
			</ul>
		</div>
		<div class="col-md-9">
			<div class="card">

				<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
				  <ol class="carousel-indicators">
				    <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
				    <li data-target="#carouselIndicators" data-slide-to="1"></li>
				    <li data-target="#carouselIndicators" data-slide-to="2"></li>
				  </ol>
				  <div class="carousel-inner">
				    <div class="carousel-item active">
				      <img class="d-block w-100" src="<%=listing.image%>" alt="First slide">
				    </div>
				    <div class="carousel-item">
				      <img class="d-block w-100" src="<%=listing.image%>" alt="Second slide">
				    </div>
				    <div class="carousel-item">
				      <img class="d-block w-100" src="<%=listing.image%>" alt="Third slide">
				    </div>
				  </div>
				  <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
				    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
				    <span class="carousel-control-next-icon" aria-hidden="true"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>
			</div>
		</div>
	</div>
</div>
<%include ../partials/footer%>