<%include ../partials/header%>

<div class="container">
	<div class="row mt-3">
		<h1 class="mx-auto">Add a new comment for <%=listing.name%></h1>
	</div>
	<div class="row">
		<div class="w-25 mx-auto mt-2">
			<form action="/listings/<%=listing._id%>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[author]" placeholder="author">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/listings">Back</a>
		</div>
	</div>
</div>


<%include ../partials/footer%>